# MCP Server Environment Configuration
# This file is used when running the MCP server standalone (outside Docker)
# All services should use localhost instead of Docker service names

# Server
PORT=5000
NODE_ENV=mcp

# MongoDB init credentials (not used directly by MCP, but kept for consistency)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# Database connection
# For MCP standalone: use 'localhost' as host
# Make sure MongoDB is running on localhost:27017 with authentication
# directConnection=true is required when connecting to a single replica set member
MONGODB_URI=mongodb://admin:password123@localhost:27017/gdrive?authSource=admin&directConnection=true

# Security
JWT_SECRET=change_this_jwt_secret
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Clear trash settings
TRASH_RETENTION_DAYS=30

# MinIO / object storage
# For MCP standalone: use 'localhost' as endpoint
# Make sure MinIO is running on localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_ENDPOINT=http://localhost:9000
MINIO_PORT=9000
MINIO_PUBLIC_URL=http://localhost:9000

# Redis config 
# For MCP standalone: use 'localhost' instead of 'redis'
# Make sure Redis is running on localhost:6379
REDIS_URL=redis://localhost:6379

# Socket io config 
FRONTEND_URL=http://localhost:5173

# OnlyOffice Document Server
OFFICE_CALLBACK_URL=http://localhost:5000
ONLYOFFICE_URL=http://localhost:8080
ONLYOFFICE_JWT_ENABLED=false
ONLYOFFICE_JWT_SECRET=my_secret_jwt_key

# LLM config (for AI Agent features)
LLM_API_KEY=sk-your-key
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
